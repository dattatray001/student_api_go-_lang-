{
  "info": {
    "name": "Students API",
    "description": "Postman collection to test Students REST API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    }
  ],
  "item": [
    {
      "name": "Create Student",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"age\": 22\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/students",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "students"
          ]
        }
      }
    },
    {
      "name": "Get All Students",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/students",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "students"
          ]
        }
      }
    },
    {
      "name": "Get Student By ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/students/1",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "students",
            "1"
          ]
        }
      }
    }
  ]
}